@require "utility"
for link, weight in fontStats
  @font-face
    font-family: "Poppins"
    src: url(baseFontURL + link) format("truetype")
    font-weight: weight

html
  font-family: "Poppins", sans-serif

body
  display: flex
  justify-content: center
  align-items: center

main
  margin-block: clamp(3em, calc(1em + 5vw), 4em)
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  +media-desktop()
    display: grid
    grid-template-areas:
            ". team ." \
            "supervisor team calculator" \
            "supervisor karma calculator" \
            ". karma ."
    gap: clamp(1.375rem, 2.75vw, 3rem)